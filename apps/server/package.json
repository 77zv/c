{
  "name": "@seegull/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .turbo node_modules",
    "dev": "pnpm build && concurrently \"pnpm build --watch\" \"pnpm watch\"",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "watch": "nodemon dist/index.js",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@seegull/db": "workspace:^0.1.0",
    "fastify": "^4.26.2",
    "nodemon": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@seegull/eslint-config": "workspace:^0.2.0",
    "@seegull/prettier-config": "workspace:^0.1.0",
    "@seegull/tsconfig": "workspace:^0.1.0",
    "@types/node": "^20.11.25",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@seegull/eslint-config/base"
    ]
  },
  "prettier": "@seegull/prettier-config"
}
