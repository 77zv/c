{
  "extends": ["@acme/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
    },
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "*.ts"],
  "exclude": ["node_modules"]
}
